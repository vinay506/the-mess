 {
     "add-cart":
     {
         "title": "Cart Item",
         "fields": [
         {
             "Label": "Product",
             "type": "text",
             "isRequired": true,
             "pattern": "/^[a-zA-Z]*$/",
             "errorMsg": "Not a valid Product"
         },
         {
             "Label": "Quantity",
             "type": "number",
             "isRequired": false,
             "pattern": "/^[0-9]*$/",
             "errorMsg": "Not a valid quantity"
         },
         {
             "Label": "Price",
             "type": "number",
             "isRequired": true,
             "pattern": "/^[0-9]*$/",
             "errorMsg": "Not a valid price"
         }],
         "footer": [
         {
             "Label": "Add",
             "action": "addCartDetails",
             "type": "submit"
         },
         {
             "Label": "Close",
             "action": "close"
         }]
     }
 }